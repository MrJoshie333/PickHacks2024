{
  "name": "CipherSleuth",
  "description": "A simple extension to decrypt various ciphers within the browser",
  "version": "1.0",
  "manifest_version": 3,
  
  "permissions": [
    "contextMenus",
    "storage"
  ],
  
  "background": {
    "service_worker": "main.js"
  },

  "action": {
    "default_popup": "manifest.html",
    "default_icon": "/Images/key.png"
  }
}
